{
	"version": "2.0.0",
	"tasks": [
	  {
		"type": "shell",
		"label": "Build with clang++",
		"command": "clang++",
		"args": [
		  "-std=c++17",
		  "-Wall",
		  "-g",
		  "${file}",
		  "-o",
		  "${fileDirname}/${fileBasenameNoExtension}"
		],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"problemMatcher": ["$gcc"]
	  }
	]
  }